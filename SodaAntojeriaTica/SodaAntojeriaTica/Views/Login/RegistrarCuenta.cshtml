@model UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="main-panel">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="~/img/Logo-Titulo.jpg" alt="logo">
                                </div>
                                <h3>Todavía no tienes cuenta?</h3>
                                <h4 class="font-weight-light">Crear Cuenta</h4>
                                <form asp-action="RegistrarCuenta" asp-controller="Login">
                                    <div class="form-group">
                                         <input type="text" class="form-control form-control-lg" asp-for="Username" placeholder="Nombre Completo">
                                    </div>
                                    <div class="form-group">
                                         <input type="email" class="form-control form-control-lg" asp-for="Email" placeholder="Correo Eectronico">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-lg" asp-for="PasswordHash" placeholder="Contraseña">
                                    </div>
                                    
                                    <div class="mt-3">
                                         <button type="submit" class="btn btn-primary btn-pill mb-4" href="@Url.Action("IniciarSesion", "Login")">CREAR</button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                    Ya estás registrado? <a href="@Url.Action("IniciarSesion", "Login")" class="text-primary">Iniciar Sesión</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 @*    <script src="../../vendors/base/vendor.bundle.base.js"></script>
    <script src="../../js/template.js"></script> *@



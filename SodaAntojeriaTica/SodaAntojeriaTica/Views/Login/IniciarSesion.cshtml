@model UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="main-panel">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo" style="text-align: center; margin-bottom: 2rem;">
                                <img src="~/img/OIP.jpg" alt="logo" style="width: 400; height: auto; display: inline-block;">
                            </div>
                            <h3>Soda Antojería Tica</h3>
                            <h4 class="font-weight-light">Iniciar Sesión</h4>
                            <form class="pt-3">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" asp-for="Identificacion" placeholder="Identificación">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" asp-for="Contrasenna" placeholder="Contraseña">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Principal", "Login")">CONFIRMAR</a>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">                                     
                                    </div>
                                    <a href="@Url.Action("RecuperarContrasenna", "Login")" class="auth-link text-black">Olvidó su contraseña?</a>
                                </div>               
                                <div class="text-center mt-4 font-weight-light">
                                    Aún no tienes cuenta? <a href="@Url.Action("RegistrarCuenta", "Login")" class="text-primary">Crear</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* <script src="~/js/vendor.bundle.base.js"></script>
<script src="~/js/template.js"></script>  *@



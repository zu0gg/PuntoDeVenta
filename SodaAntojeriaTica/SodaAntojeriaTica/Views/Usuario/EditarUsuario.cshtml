@model UsuarioModel

<h2>Actualizar Usuario</h2>

<form asp-action="ActualizarDatos" method="post">
    <!-- Campo oculto para el Id del usuario -->
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Ingrese el Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Ingrese el Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Ingrese la nueva Contraseña (si desea cambiarla)" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

@model IEnumerable<SodaAntojeriaTica.Models.CategoriaModel>

@{
    ViewData["Title"] = "Listado de Categorías";
}

<div class="container mt-4">
    <h1 class="mb-4">Listado de Categorías</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Categoría
        </a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Creado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.Descripcion</td>
                    <td>@categoria.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@categoria.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
